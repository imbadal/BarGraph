<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".MainActivity">


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floatingActionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu_icon="@drawable/ic_add_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        app:menu_fab_label=""
        app:menu_openDirection="up"
        app:menu_showShadow="true"
        fab:menu_colorNormal="#ff0051"
        fab:menu_colorPressed="#ff006a"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50">


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="Create"
            app:fab_size="mini"
            app:fab_showAnimation="@anim/sd_fade_and_translate_in"
            app:fab_hideAnimation="@anim/sd_fade_and_translate_out"
            android:src="@drawable/ic_create_black_24dp"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="History"
            app:fab_size="mini"
            app:fab_showAnimation="@anim/sd_fade_and_translate_in"
            app:fab_hideAnimation="@anim/sd_fade_and_translate_out"
            android:src="@drawable/ic_create_black_24dp"/>



    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>